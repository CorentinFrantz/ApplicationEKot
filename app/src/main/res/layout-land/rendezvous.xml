<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/adresseMail"
        android:hint="@string/adresseMail"
        android:layout_below="@+id/numTel"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/numTel"
        android:hint="@string/numTel"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/adresseMail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/prenomRendezVous"
        android:hint="@string/prenomRendezVous"
        android:layout_below="@+id/textRdv"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nomRendezVous"
        android:hint="@string/nomRendezVous"
        android:layout_above="@+id/numTel"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:text="@string/buttonRdv"
        android:id="@+id/buttonRdv"
        android:layout_height="wrap_content"
        android:textColor="#0066CC"
        android:textSize="16dp"
        android:layout_below="@+id/adresseMail"
        android:layout_toEndOf="@+id/textRdv"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/textRdv"
        android:id="@+id/textRdv"
        android:textColor="#0066CC"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/problem"
        android:hint="@string/problem"
        android:layout_below="@+id/adresseMail"
        android:layout_centerHorizontal="true" />

</RelativeLayout>