<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/textPermanence"
        android:id="@+id/textPermanence"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="69dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textHeurePerma" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonRendezVous"
        android:id="@+id/buttonRendezVous"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imagePerma"
        android:src="@drawable/imageperma"
        android:layout_marginStart="44dp"
        android:layout_alignTop="@+id/textPermanence"
        android:layout_alignStart="@+id/textHeurePerma" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/textHeurePerma"
        android:id="@+id/textHeurePerma"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#0066CC"
        android:layout_alignTop="@+id/buttonRendezVous"
        android:layout_alignBottom="@+id/buttonRendezVous"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="220dp" />
</RelativeLayout>